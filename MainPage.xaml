<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trif_Andrei_Lab7.MainPage">

    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        VerticalOptions="Center">

        <Image 
            Source="it_works.png"
            SemanticProperties.Description="It Works on my machine"
            Aspect="Center"
            HorizontalOptions="Center"
            VerticalOptions="StartAndExpand" />

        <Label 
            FontSize="22" 
            FontAttributes="Bold" 
            Text="It Works On My Machine!" 
            VerticalOptions="End"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
